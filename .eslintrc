{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "ecmaFeatures": {
        "arrowFunctions": true,
        "classes": true,
        "jsx": true
    },
    "globals": {
        "React": true,
        "jest": true
    },
    "rules": {
        "camelcase": true,
        "comma-spacing": [2, {
            "before": false,
            "after": true
        }],
        "curly": true,
        "eqeqeq": true,
        "immed": true,
        "indent": 4,
        "latedef": true,
        "newcap": true,
        "noarg": true,
        "quotes": [2, "single"]
    }
}